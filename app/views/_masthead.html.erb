<div id='masthead' class='container-fluid'>

  <div class='row' id='nmTop'>
    <div class='col-xs-5 col-sm-6'>
      <%= link_to image_tag('NM_logo.png', height: '50'),
        'http://www.nm.org', id: 'NMLogo', target: '_blank' %>
    </div>
    <div class='col-xs-7 col-sm-6 text-right' id='nmRightLinks'>
      <a href='http://www.northwestern.edu' target='_blank'>Northwestern University</a>
      |
      <a href='http://www.feinberg.northwestern.edu/faculty-profiles/index.html' target='_blank'>
        Faculty Profiles
      </a>
    </div>
  </div>

  <div class='row' id='nmBottom'>
    <div class='col-xs-12 col-sm-8'>
      <%= render partial: '/logo' %>
    </div><!-- /.col-xs-5 -->
    <div class='col-xs-12 visible-xs-block' id='user_utility_xs'>
        <%= render partial: '/user_util_links' %>
    </div><!-- /.col-xs-7 -->
    <div class='col-sm-4 hidden-xs text-right' id='user_utility_lg'>
        <%= render partial: '/user_util_links' %>
    </div><!-- /.col-xs-7 -->
  </div><!-- /.row -->
</div> <!-- /masthead -->
