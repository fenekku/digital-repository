<div class="modal-div">

  <!-- Text to trigger modal -->
  <h4>
    <i class="glyphicon glyphicon-globe"> </i>
    <a data-toggle="modal" href="#followedCollections">
      Followed Collections:
    </a>  <%= @user.all_followed_collections.count %>
  </h4>

  <!-- Modal -->
  <div class="modal fade" id="followedCollections" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <% if @user.all_followed_collections.count > 0 %>
            <% if current_user == @user %>
              <h3>Collections you follow</h3>
            <% else %>
              <h3>Collections <%= @user.display_name %> follows</h3>
            <% end %>
            <ul>
              <% @user.all_followed_collections.each do |c| %>
                <li>
                  <%= link_to c[:title], collections.collection_path(c[:id]),
                    title: "View the collection" %>
                </li>
              <% end %>
            </ul>
          <% else %>
            <% if current_user == @user %>
              <h3>You do not follow any collections</h3>
            <% else %>
              <h3><%= @user.display_name %> does not follow any collections</h3>
            <% end %>
          <% end %>
        </div>
        <div class="modal-footer">
          <button class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
