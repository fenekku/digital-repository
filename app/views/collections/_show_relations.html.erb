<br />
<% if @collection.collections.blank? %>
    <p><%= t('sufia.collection.collections_list.empty') %></p>
<% else %>
    <p><%= t('sufia.collection.collections_list.heading') %></p>
  <table class="table table-striped">
    <tbody>
    <% @collection.collections.each do |collection| %>
    <tr class="collection attributes">
      <%= content_tag :td, class: 'attribute title', data: { id: collection.id } do %>
        <%= link_to collection.title, collections.collection_path(collection) %>
      <% end %>
    </tr>
  <% end %>
  </tbody>
  </table>
<% end %>
