a {
  color: #0082BF;
}

a:hover {
  color: #0082BF;
}

#wrapper {
  background: #d4d5d6 none repeat scroll 0 0 !important;
}

#masthead {
  min-height: 6em;
  background: white;
}

#nmTop {
  border-bottom: 1px solid #e6e6e6;
}

#NMLogo {
  display: block;
  height: 25px;
  margin-top: 15px;
  margin-bottom: 15px;
  position: relative;
  width: 126px;
}

#nmRightLinks {
  margin-top: 15px;
}

#nmRightLinks a {
  font-family: Calibri,"Helvetica Neue",Helvetica,Arial,sans-serif;
  color: #54585A;
}

#nmRightLinks a:hover {
  opacity: .75;
  text-decoration: none;
}

#feinbergTopLink, #feinbergBottomLink {
  margin-top: 10px;
  color: #FFF;
  font-size: 16px;
  font-family: "Helvetica Neue", Helvetica, Arial;
  text-decoration: none;
}

#digitalHubTopLink {
  color: #FFF;
  font-size: 40px;
  font-family: "Calibri Light", Calibri, Arial;
  text-decoration: none;
}

#topTitle {
  margin-bottom: 5px;
}

a#digitalHubTopLink:hover, a#feinbergTopLink:hover, a#NMLogo:hover {
  opacity: .75;
}

#betaWrap {
  display: block;
  padding-top: 13px
}

#betaLabel {
  font-size: 16px;
  font-family: "Calibri Light", Calibri, Arial;
  padding-bottom: 1px;
  font-weight: 400;
  margin-left: 5px;
}

#nmBottom {
  background-color: #514689;
}

#home_header {
  background-image: url(<%= asset_data_uri('spec_col_crop_top.jpg') %>);
  border-top: 8px solid #d4d5d6;
  border-bottom: 0px;
}

#home_content {
  padding-bottom: 0px;
  padding-top: 0px;
}

#homeTabs {
  padding-top: 7px;
  margin-left: -15px;
  margin-right: -15px;
  padding-left: 7px;
}

#featured_container > h2 {
  display: none;
}

#home_content > div {
  border-top: 8px solid #d4d5d6;
}

#home_content > div:nth-child(2) {
  padding-left: 8px;
  padding-right: 8px;
  background-color: rgb(212, 213, 214);
}

#home_content > div:nth-child(2) > div {
  background-color: #FFF;
  padding: 7px;
}

#home_content > div:nth-child(2) h2 {
  margin-top: 0px;
}

#home_content > div:nth-child(2) > div:nth-child(1) h2 {
  padding-bottom: 7px;
  margin-left: -7px;
  margin-right: -7px;
  padding-left: 7px;
  padding-right: 7px;
  border-bottom: 1px solid #d4d5d6;
}

#home_content > div:nth-child(2) > div:nth-child(2) {
  border-top: 8px solid #d4d5d6;
  padding: 7px;
}

#home_content > div:nth-child(2) > div:nth-child(2) > div {
  margin-left: 0px;
  margin-right: 0px;
}

#home_content > div:nth-child(2) > div:nth-child(2) div > h2 {
  margin-bottom: 0px;
  padding-bottom: 10px;
}

a.tag-toggle-list {
  margin-top: 0px;
  float: right;
  margin-bottom: 0px;
}

div#tag-cloud {
  border-top: 1px solid #d4d5d6;
  padding-left: 15px;
  padding-right: 15px;
  margin-top: 0px;
  padding-top: 7px;
}

ul.tagcloud a {
  color: #0082BF !important;
}

#footer{
  background: none repeat scroll 0% 0% #61468B;
}

#footer dl {
  margin-bottom: 0px;
}

#wrapper {
  background-image: linear-gradient(to bottom, #E6E6E6 0%, #FFF 100%);
}

#masthead_controls {
  border-top: none;
  border-bottom: none;
  background-color: #E6E6E6;
}

#masthead_controls .navbar {
  background-color: #E6E6E6;
  margin-bottom: 0px;
  font-family: Calibri,"Helvetica Neue",Helvetica,Arial,sans-serif;
  font-weight: 400;
  font-size: 20px;
}
#masthead_controls .navbar li:first-child {
  border-left: 2px solid #FFF;
}
#masthead_controls .navbar li {
  border-right: 2px solid #FFF;
}

#masthead_controls .navbar a:link, #masthead_controls .navbar a:visited {
  color: #54585A;
  background-color: #E6E6E6;
}

#masthead_controls .navbar a:hover {
  background-color: #D4D5D6;
}

#masthead_controls .navbar-default .navbar-nav > .active > a, #masthead_controls .navbar-default .navbar-nav > .active > a:hover, #masthead_controls .navbar-default .navbar-nav > .active > a:focus {
  background-color: #FFF;
  color: #54585A;
  border-top: 3px solid #B1ACCE;
  border-bottom: 2px solid white;
  margin-top: -4px;
  padding-bottom: 17px;
}

#masthead_controls .navbar-default .navbar-nav > :not(.active) > a {
  padding-bottom: 18px;
}

.dashboard .panel-default > .dashboard-panel {
  //background-color: rgb(104, 72, 113);
  background-color: rgb(245,245,245);
  color: #333;
}

div.heading-tile .glyphicon, div.heading-tile .help-icon {
    background: none repeat scroll 0% 0% #FFAE00;
}

.dashboard .badge {
    background-color: #FFAE00;
}

#footer a {
  color: #FFF;
}

div#announcement {
  background-color: white;
  color: black;
}

select[name="generic_file[resource_type][]"],
select[name="collection[resource_type][]"] {
  height: 12em;
}

.collection_description, .genericfile_description {
  font-family: Verdana, Arial, sans-serif;
  font-size: 13px;
}
