a {
  color: #0082BF;
}

a:hover {
  color: #0082BF;
}

#wrapper {
  background: #d4d5d6 none repeat scroll 0 0 !important;
}

#nmTop {
  border-bottom: 1px solid #e6e6e6;
}

#NMLogo {
  display: block;
  height: 25px;
  margin-top: 15px;
  margin-bottom: 15px;
  position: relative;
  width: 126px;
}

#feinbergTopLink, #feinbergBottomLink {
  margin-top: 10px;
  color: #FFF;
  font-size: 16px;
  font-family: "Helvetica Neue", Helvetica, Arial;
  text-decoration: none;
}

#digitalHubTopLink {
  color: #FFF;
  font-size: 40px;
  font-family: "Calibri Light", Calibri, Arial;
  text-decoration: none;
}

#topTitle {
  margin-bottom: 5px;
}

a#digitalHubTopLink:hover, a#feinbergTopLink:hover, a#NMLogo:hover {
  opacity: .75;
}

#betaWrap {
  display: block;
  padding-top: 13px
}

#betaLabel {
  font-size: 16px;
  font-family: "Calibri Light", Calibri, Arial;
  padding-bottom: 1px;
  font-weight: 400;
  margin-left: 5px;
}

#nmBottom {
  background-color: #514689;
}

#home_header {
  background-image: url(<%= asset_data_uri('spec_col_crop_top.jpg') %>);
  border-top: 8px solid #FFF;
  border-bottom: 8px solid #FFF;
}

#masthead {
  min-height: 6em;
  background: white;
}

ul.tagcloud a {
  color: #0082BF !important;
}

#footer{
  background: none repeat scroll 0% 0% #61468B;
}

#footer dl {
  margin-bottom: 0px;
}

#wrapper {
  background-image: linear-gradient(to bottom, #E6E6E6 0%, #FFF 100%);
}

#masthead_controls {
  border-top: none;
  border-bottom: none;
  background-color: #E6E6E6;
}
#masthead_controls .navbar {
  background-color: #E6E6E6;
  margin-bottom: 0px;
}
#masthead_controls .navbar li:first-child {
  border-left: 2px solid #FFF;
}
#masthead_controls .navbar li {
  border-right: 2px solid #FFF;
}

#masthead_controls .navbar a:link, #masthead_controls .navbar a:visited {
  color: #54585A;
  background-color: #E6E6E6;
}

#masthead_controls .navbar a:hover {
  background-color: #D4D5D6;
}

#masthead_controls .navbar-default .navbar-nav > .active > a, #masthead_controls .navbar-default .navbar-nav > .active > a:hover, #masthead_controls .navbar-default .navbar-nav > .active > a:focus {
  background-color: #FFF;
  color: #0082BF;
  border-top: 3px solid #B1ACCE;
  border-bottom: 2px solid white;
  margin-top: -4px;
}

.dashboard .panel-default > .dashboard-panel {
  //background-color: rgb(104, 72, 113);
  background-color: rgb(245,245,245);
  color: #333;
}

div.heading-tile .glyphicon, div.heading-tile .help-icon {
    background: none repeat scroll 0% 0% #FFAE00;
}

.dashboard .badge {
    background-color: #FFAE00;
}

#footer a {
  color: #FFF;
}

div#announcement {
  background-color: white;
  color: black;
}

select[name="generic_file[resource_type][]"],
select[name="collection[resource_type][]"] {
  height: 12em;
}
